{
  "name": "lootforge",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "description": "LootForge CLI for manifest-driven game asset packs",
  "bin": {
    "lootforge": "./bin/lootforge.js"
  },
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "npm run clean && tsc -p tsconfig.json",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest run --passWithNoTests",
    "test:unit": "vitest run test/unit --passWithNoTests",
    "test:integration": "vitest run test/integration --passWithNoTests",
    "lint": "node -e \"console.log('lint placeholder: ok')\"",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "demo:dev": "vite --config examples/phaser-demo/vite.config.ts",
    "demo:build": "vite build --config examples/phaser-demo/vite.config.ts",
    "demo:test": "vitest run test/demo --passWithNoTests",
    "demo:assets:plan": "tsx src/cli/index.ts plan --manifest examples/phaser-demo/assets/manifest.demo.json --out examples/phaser-demo/public",
    "demo:assets:generate": "tsx src/cli/index.ts generate --manifest examples/phaser-demo/assets/manifest.demo.json --out examples/phaser-demo/public --provider openai",
    "demo:assets:atlas": "tsx src/cli/index.ts atlas --out examples/phaser-demo/public",
    "demo:assets:postprocess": "node examples/phaser-demo/scripts/postprocess-assets.mjs"
  },
  "dependencies": {
    "sharp": "^0.34.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "phaser": "^3.90.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^7.1.5",
    "vitest": "^2.1.8"
  }
}
